    }
    /* Base styles */
    .page-container {
        position: relative;
        min-height: 100vh;
    }

    /* Navbar styles */
    .navbar {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        padding: 2rem 5%;
        z-index: 1000;
        background: transparent;
    }

